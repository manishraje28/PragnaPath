# PragnaPath Environment Configuration
# Copy this file to .env and fill in your values

# Google Gemini API Key (Required)
GOOGLE_API_KEY=your_gemini_api_key_here

# Model Configuration
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MODEL_PRO=gemini-1.5-pro

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Session Configuration
SESSION_TIMEOUT_MINUTES=30

# MongoDB Configuration (Optional - for user persistence)
# If not configured, system falls back to in-memory storage
#
# For LOCAL MongoDB:
# MONGODB_URI=mongodb://localhost:27017
#
# For MONGODB ATLAS (cloud):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
#
MONGODB_URI=mongodb-uri
MONGODB_DB=pragnapath

# Authentication Configuration
# JWT secret key (auto-generated if not set, but set one for production)
JWT_SECRET_KEY=your-secret-key-change-in-production
# Token expiry in hours (default: 72 hours = 3 days)
TOKEN_EXPIRY_HOURS=72
